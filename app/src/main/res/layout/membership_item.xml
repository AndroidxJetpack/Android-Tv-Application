<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/greyApp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/membership"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:text="Membership"
        android:textSize="16sp"
        android:textColor="@color/whiteApp"
        android:fontFamily="@font/product_sans_regular"
        android:background="@drawable/membership_text_outline"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/price"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:text="Price"
        android:textSize="16sp"
        android:textColor="@color/whiteApp"
        android:fontFamily="@font/product_sans_regular"
        android:background="@drawable/membership_text_outline"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/nextPayment"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="Next Payment"
        android:textSize="16sp"
        android:textColor="@color/whiteApp"
        android:fontFamily="@font/product_sans_regular"
        android:background="@drawable/membership_text_outline"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/status"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="Status"
        android:textSize="16sp"
        android:textColor="@color/whiteApp"
        android:fontFamily="@font/product_sans_regular"
        android:background="@drawable/membership_text_outline"
        android:gravity="center_vertical"
        />
    />
    <Button
        android:id="@+id/manage"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="@string/delete"
        android:textSize="16sp"
        android:textColor="@color/redApp"
        android:fontFamily="@font/product_sans_regular"
        android:background="@drawable/membership_text_outline"
        android:nextFocusForward="@id/manage"
        android:nextFocusRight="@id/manage"
        android:nextFocusLeft="@id/manage"
        />
</LinearLayout>