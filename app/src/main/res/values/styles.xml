    <style name="Theme.MyTheme" parent="Theme.Leanback">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/redApp</item>
        <item name="colorPrimaryVariant">@color/redApp</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/redApp</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/blackApp</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="rowHorizontalGridStyle">@style/HorizontalGridView</item>
        <item name="rowHeaderStyle">@style/HeaderStyle</item>
        <item name="rowHeaderDockStyle">@style/HeaderStyle</item>
        <item name="rowsVerticalGridStyle">@style/VerticalGridView</item>
        <item name="itemsVerticalGridStyle">@style/VerticalGridViewItem</item>
<!--        <item name="browsePaddingBottom">4dp</item>-->
    </style>
<!--    Use for herder view style-->
    <style name="HeaderStyle">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:minHeight">@dimen/dimens_10dp</item>
        <item name="android:minWidth">1dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Leanback.Header</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">none</item>
    </style>
<!--Use row style -->
    <style name="HorizontalGridView">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>

        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>

        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:horizontalSpacing">0dp</item>
        <item name="android:verticalSpacing">0dp</item>
        <item name="focusOutFront">true</item>
    </style>
    <style name="VerticalGridView">
        <item name="android:paddingBottom">0dp</item>
        <item name="focusOutFront">true</item>
        <item name="focusOutEnd">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
    <style name="VerticalGridViewItem">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:horizontalSpacing">0dp</item>
        <item name="android:verticalSpacing">0dp</item>
        <item name="focusOutFront">true</item>
    </style>

    <style name="MyCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlNormal" tools:ignore="NewApi">@color/whiteApp</item>
        <item name="android:colorControlActivated" tools:ignore="NewApi">@color/whiteApp</item>
        <item name="android:colorFocusedHighlight" tools:ignore="NewApi">@color/redApp</item>
        <item name="android:colorControlHighlight" tools:ignore="NewApi">@color/whiteApp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>
    <style name="MyProgressDialog" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/redApp</item>
        <item name="colorPrimaryDark">@color/redApp</item>
        <item name="colorAccent">@color/redApp</item>
        <item name="android:textColor">@color/redApp</item>
        <item name="android:itemBackground">@color/redApp</item>
        <item name="android:textColorSecondary">@color/redApp</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Dialog">
        <item name="android:textColor">@color/redApp</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/redApp</item>
        <item name="colorPrimary">@color/redApp</item>
        <item name="colorPrimaryDark">@color/redApp</item>
    </style>

    <style name="MyCustomRowHeaderStyle" parent="Widget.Leanback.Row.Header">
        <item name="android:textColor">@color/blackApp</item>
    </style>

    <style name="MyCustomBrowseStyle" parent="Theme.Leanback.Browse">
        <item name="rowHeaderStyle">@style/MyCustomRowHeaderStyle</item>
    </style>
    <style name="SeekBar" parent="Theme.MyTheme">
        <item name="colorControlActivated">@color/redApp</item>
        <item name="colorControlNormal">@color/whiteApp</item>
    </style>
</resources>